<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="search_result_list">
           <action ifconfig="nordcomputer/search/show_add_to_cart_search" method='setTemplate'>                
                <argument name="template" xsi:type="string">Nordcomputer_Showoutofstockprice::product/list.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="category.product.type.details.renderers.configurable">
            <action ifconfig="nordcomputer/search/show_swatches_search" method='setTemplate'>                
                   <argument name="template" xsi:type="string">Nordcomputer_Showoutofstockprice::product/listing/renderer.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>