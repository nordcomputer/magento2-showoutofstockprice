<?php
$usedProducts=$_product->getTypeInstance()->getUsedProductIds($_product);
$_children = $_product->getExtensionAttributes()->getConfigurableProductLinks();
$price="";
if (count($usedProducts)==0 && count($_children)>0) {
    foreach ($_children as $child) {
        $child=$child;
        $objectManager = \Magento\Framework\App\ObjectManager::getInstance();
        $product = $objectManager->create('Magento\Catalog\Model\Product')->load($child);

    }

    $priceRender = $this->getLayout()->getBlock('product.price.render.default')
                    ->setData('is_product_list', false);


    if ($priceRender) {
        $price = $priceRender->render(
            \Magento\Catalog\Pricing\Price\FinalPrice::PRICE_CODE,
            $product,
            [
                'include_container' => true,
                'display_minimal_price' => true,
                'zone' => \Magento\Framework\Pricing\Render::ZONE_ITEM_LIST,
                'list_category_page' => true
            ]
        );
    }
    ?>
    <script>
    require(['jquery'], function($){
      jQuery(document).ready( function() {
        var price='<?= preg_replace("/\r|\n/", "", /* @noEscape */ $price);?>';
        $('.product-info-price').hide();
        var stock=$('.product-info-stock-sku');
        $('.product-info-price').html(price);
        $('.product-info-price').append(stock);
        $('.product-info-price').show();
      });
    });
    </script>
<?php
}
